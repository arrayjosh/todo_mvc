<div class="page-header">
  <h1>
    Profile for <%= @user.firstname %> <%= @user.lastname %>
    <small><%= link_to "edit your profile", edit_user_registration_path %></small>
  </h1>

</div>
<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h1>Articles <small><%= link_to "New Article", new_article_path %></small></h1>
      <ul>
      <% @articles.each do |article| %>
        <li><%= link_to article.title, edit_article_path(article) %> - <%= time_ago_in_words(article.created_at) %></li>
      <% end %>
      </ul>
    </div>
    <div class="col-md-6">
      <h1>Lists</h1>
    </div>
  </div>
</div>
